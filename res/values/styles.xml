<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.FullScreen" parent="@style/Theme.Sherlock">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/Theme.Custom.NoActionBar</item>
        <item name="actionBarStyle">@style/Theme.Custom.NoActionBar</item>
    </style>

    <style name="Theme.Custom.Sherlock.Light" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Theme.Custom.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.Custom.ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/Theme.Custom.TabText</item>
        <item name="actionBarTabTextStyle">@style/Theme.Custom.TabText</item>
    </style>

    <style name="Theme.Custom.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/footer</item>
        <item name="background">@drawable/footer</item>
        <item name="android:titleTextStyle">@style/Theme.Custom.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Theme.Custom.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="Theme.Custom.NoActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">#000000</item>
	    <item name="background">#000000</item>
	    <item name="android:displayOptions"></item>
	    <item name="displayOptions"></item>
    </style>
    
    <style name="Theme.Custom.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
 	</style>

    <style name="Theme.Custom.TabText" parent="@style/Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>